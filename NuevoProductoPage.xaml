<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="productoApp.NuevoProducto"
             Title="NuevoProducto">
    <VerticalStackLayout>
        <TableView>
            <TableRoot>
                <TableSection Title="Ingrese Nuevo Producto">
                    <EntryCell x:Name="Nombre"
                               Placeholder="Nombre"/>
                    <EntryCell x:Name="CtdenStock"
                               Placeholder="Cantidad en Stock"/>
                    <EntryCell x:Name="Descripcion"
                               Placeholder="Descripcion"/>
                    <EntryCell x:Name="Precio"
                               Placeholder="Precio"/>
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Guardar Producto"
                FontSize="20"
                Margin="5"
                Clicked="OnClickGuardarNuevoProducto"/>
    </VerticalStackLayout>
</ContentPage>